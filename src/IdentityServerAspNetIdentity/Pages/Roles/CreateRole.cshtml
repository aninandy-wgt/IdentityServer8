@page
@using IdentityServerAspNetIdentity.Pages.Roles
@model IdentityServerAspNetIdentity.Pages.Roles.CreateRoleModel
@{    ViewData["Title"] = "Create Role";}

<h2>Create a new Role</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="RoleName">Role Name</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PermissionsInput">
            Permissions <small>(comma-separated)</small>
        </label>
        <input asp-for="PermissionsInput" class="form-control"
               placeholder="AAA.RoleManagement.AddRoles, AAA.RoleManagement.ListRoles, AAA.RoleManagement.AssignRole" />
        <span asp-validation-for="PermissionsInput" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Role</button>
    <a asp-page="ListRoles" class="btn btn-secondary">Cancel</a>
</form>
