@page
@model IdentityServerAspNetIdentity.Pages.Admin.ListRolesModel
@{
    ViewData["Title"] = "Roles";
}

<h2>Roles</h2>

<p>
    <a asp-page="CreateRole" class="btn btn-primary">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@role.Id" 
                          onsubmit="return confirm('Are you sure you want to delete this role?');">
                        <a asp-page="AssignRole" asp-route-roleId="@role.Id" class="btn btn-info">Assign Users</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
